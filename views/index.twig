{% extends "base.twig" %}

{% block title %}Accueil{% endblock %}

{% block css %}
    <link rel="stylesheet" href="/public/css/columns-masonry.css">
{% endblock %}

{% block body %}

    <main class="anim-fall overlay bg-clouds">

        <ul class="columns-masonry">

            {# @@@ FOR EACH IMAGES  => do this #}

            {% for image in exifsInfo %}
                <li class="overlay">
                    <a href="/detail/{{ image.data.id }}" title="DÃ©tails de l'image" class="block">
                        <img src="{{ image.data[0].SourceFile }}"
                             alt="{{ image.data[0].Title ?: '* Titre *' }}"/>
                        <div class="absolute-spread padding bg-silver-opac-9">
                            <h3 class="txt-i margin-0 color-yang">{{ image.data[0].Title ?: '* Titre *' }}</h3>
                            <p class="truncate-4 line-height truncate-2-xl color-charcoal truncate-3-l truncate-2-m truncate-7-s truncate-3-xs margin-30-top-bottom">
                                {{ image.data[0].Description ?: '* Description *' }}</p>
                            <span class="color-amethyst txt-b">{{ image.data[0].Creator ?: '* Auteur *' }}</span>
                        </div>
                    </a>
                </li>
            {% endfor %}

            {# @@@ END FOR EACH #}


        </ul>
    </main>
{% endblock %}